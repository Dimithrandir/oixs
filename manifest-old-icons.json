{
	"manifest_version": 2,
	"name": "oixs",
	"version": "0.1",

	"author": "Dimithrandir",

	"description": "Open links with a delay",
	"homepage_url": "https://github.com/Dimithrandir/oixs",

	"icons": {
		"16": "oixs-16.png",
		"32": "oixs-32.png",
		"48": "oixs-48.png",
		"64": "oixs-64.png",
		"128": "oixs-128.png"
	},

	"permissions": [
		"activeTab",
		"contextMenus"
	],

	"background": {
		"scripts": ["background.js"]
	},

	"content_scripts": [
		{
			"matches": ["<all_urls>"],
			"css": ["content.css"],
			"js": ["content.js"]
		}
	],

	"browser_action": {
		"default_icon": {
			"16": "oixs-16.png",
			"32": "oixs-32.png"
		},
		"default_title": "oixs",
		"default_popup": "popup.html"
	}
}
