{
	"manifest_version": 2,
	"name": "Open in X seconds",
	"version": "1.0.2",

	"developer": {
		"name": "Dimithrandir",
		"url": "https://github.com/Dimithrandir"
	},

	"description": "Opens links with a delay.",
	"homepage_url": "https://github.com/Dimithrandir/oixs",

	"icons": {
		"16": "img/oixs-small.svg",
		"32": "img/oixs.svg",
		"48": "img/oixs.svg",
		"64": "img/oixs.svg",
		"128": "img/oixs.svg"
	},
	
	"options_ui": {
		"page": "settings.html"
	},

	"permissions": [
		"activeTab",
		"contextMenus",
		"storage"
	],

	"browser_specific_settings": {
		"gecko": {
			"id": "oixs@dimithrandir.me"
		}
	},

	"background": {
		"scripts": ["background.js"]
	},

	"content_scripts": [
		{
			"matches": ["<all_urls>"],
			"css": ["content.css"],
			"js": ["content.js"]
		}
	],

	"browser_action": {
		"default_icon": {
			"16": "img/oixs-small.svg",
			"32": "img/oixs.svg"
		},
		"default_title": "Open in X seconds",
		"default_popup": "popup.html"
	}
}
